{
  "name": "univault-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node scripts/migrate.js",
    "validate": "node scripts/validate-setup.js",
    "setup": "npm run validate && npm run migrate",
    "build": "echo 'Building UniVault...' && npm install",
    "test": "jest --config=tests/jest.config.js",
    "test:unit": "jest --config=tests/jest.config.js tests/unit/",
    "test:integration": "jest --config=tests/jest.config.js tests/integration/",
    "test:watch": "jest --config=tests/jest.config.js --watch",
    "test:coverage": "jest --config=tests/jest.config.js --coverage",
    "test:api": "echo 'Testing API endpoints...' && node scripts/test-api.js",
    "test:enhanced": "node scripts/test-enhanced-system.js",
    "production:setup": "node scripts/production-setup.js",
    "production:build": "npm ci --only=production",
    "production:start": "NODE_ENV=production node server.js",
    "monitoring:start": "node scripts/start-monitoring.js",
    "docker:build": "docker build -t univault .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:railway": "railway deploy",
    "deploy:render": "echo 'Push to GitHub to trigger Render deployment'",
    "optimize:db": "node scripts/optimize-database.js",
    "backup:db": "node scripts/backup-database.js",
    "logs:view": "tail -f logs/*.log"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "uuid": "^11.1.0",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "banking",
    "fintech",
    "nodejs",
    "mysql",
    "express",
    "authentication",
    "security"
  ],
  "author": "UniVault Development Team",
  "license": "MIT",
  "description": "Comprehensive banking system with enhanced security and user management"
}
