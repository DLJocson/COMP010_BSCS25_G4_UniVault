# ====================================================================
# UniVault Banking System - Production Environment Configuration
# ====================================================================

# Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-production-db-host.com
DB_USER=univault_prod_user
DB_PASSWORD=your-super-secure-production-password
DB_NAME=univault_production
DB_PORT=3306
DB_CONNECTION_LIMIT=20
DB_TIMEOUT=60000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-production-2024
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-production-2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=14

# Session Configuration
SESSION_MAX_CONCURRENT=3
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TIMEOUT_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_REGISTRATION_PER_HOUR=5
RATE_LIMIT_LOGIN_ATTEMPTS_PER_HOUR=10

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8
REQUIRE_2FA_FOR_ADMIN=true
SECURITY_HEADERS_ENABLED=true

# CORS Configuration
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/univault
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=10
LOG_ENABLE_FILE=true
LOG_ENABLE_CONSOLE=false

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL_MS=60000
METRICS_RETENTION_DAYS=30

# Alert Thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_ERROR_RATE_THRESHOLD=5

# External Services
EMAIL_SERVICE_HOST=smtp.your-email-provider.com
EMAIL_SERVICE_PORT=587
EMAIL_SERVICE_USER=your-email-username
EMAIL_SERVICE_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_STORAGE_PATH=/var/uploads/univault

# Cache Configuration
CACHE_TYPE=redis
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/univault

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# API Documentation
API_DOCS_ENABLED=false
SWAGGER_UI_ENABLED=false

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_BIOMETRIC_AUTH=false
FEATURE_ADVANCED_ANALYTICS=true

# Compliance and Audit
AUDIT_LOG_ENABLED=true
COMPLIANCE_MODE=BSP
PII_ENCRYPTION_ENABLED=true
DATA_RETENTION_YEARS=7

# Performance Optimization
GZIP_COMPRESSION=true
RESPONSE_CACHING=true
CONNECTION_POOLING=true
QUERY_OPTIMIZATION=true

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SERVICE=your-error-service
ERROR_REPORTING_API_KEY=your-error-service-api-key

# Notification Services
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=false

# Third-party Integrations
PAYMENT_GATEWAY_ENABLED=false
KYC_VERIFICATION_ENABLED=true
CREDIT_SCORING_ENABLED=false

# Development/Debug (should be false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
STACK_TRACE_ENABLED=false
